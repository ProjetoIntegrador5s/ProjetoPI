<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TabelaEstagiarios">

      <TableLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@android:color/white"
          android:id="@+id/tabelaEstagiarios"
          android:layout_margin="0dp">

          <TableRow
              android:background="@color/red">
              <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:text="Nome"
                  android:id="@+id/nome"
                  android:textColor="@android:color/white"
                  android:padding="10sp"
                  android:textSize="14sp"
                  android:layout_weight="1"
                  android:gravity="center_horizontal"
                  />

              <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:text="Matricula"
                  android:id="@+id/matricula"
                  android:textColor="@android:color/white"
                  android:padding="10sp"
                  android:textSize="14sp"
                  android:layout_weight="1"
                  android:gravity="center_horizontal"
                  />
              <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:text="Curso"
                  android:id="@+id/curso"
                  android:textColor="@android:color/white"
                  android:padding="10sp"
                  android:textSize="14sp"
                  android:layout_weight="1"
                  android:gravity="center_horizontal"
                  />
              <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:text="Data Ingresso"
                  android:id="@+id/dataIngresso"
                  android:textColor="@android:color/white"
                  android:padding="10sp"
                  android:textSize="14sp"
                  android:layout_weight="1"
                  android:gravity="center_horizontal"
                  />
              <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:text="Telefone"
                  android:id="@+id/telefone"
                  android:textColor="@android:color/white"
                  android:padding="10sp"
                  android:textSize="14sp"
                  android:layout_weight="1"
                  android:gravity="center_horizontal"
                  />
              <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:text="Email"
                  android:id="@+id/email"
                  android:textColor="@android:color/white"
                  android:padding="10sp"
                  android:textSize="14sp"
                  android:layout_weight="1"
                  android:gravity="center_horizontal"
                  />
              <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:text="Relatorio 1"
                  android:id="@+id/relatorio1"
                  android:textColor="@android:color/white"
                  android:padding="10sp"
                  android:textSize="14sp"
                  android:layout_weight="1"
                  android:gravity="center_horizontal"
                  />
              <TextView
                  android:layout_width="0dp"
                  android:layout_height="wrap_content"
                  android:text="Relatorio 2"
                  android:id="@+id/relatorio2"
                  android:textColor="@android:color/white"
                  android:padding="10sp"
                  android:textSize="14sp"
                  android:layout_weight="1"
                  android:gravity="center_horizontal"
                  />

          </TableRow>
      </TableLayout>

</RelativeLayout>